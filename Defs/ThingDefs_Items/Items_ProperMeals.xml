<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- ########## Proper Meals Complete ########## -->
<ThingDef ParentName="MealBase">
    <defName>MealComplete</defName>
    <label>complete meal</label>
    <description>An excessive and extensive meal from a combination of bread, cheese, meat, eggs, vegetables, fruit and spices.\n\nA culinary masterpiece which nourishes body, mind, and soul with its harmonious selection of ingredients.</description>
    <graphicData>
      <texPath>Things/Meal/Complete</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
         <DeteriorationRate>1</DeteriorationRate>
         <MarketValue>100</MarketValue>
         <WorkToMake>1800</WorkToMake>
         <Nutrition>1.8</Nutrition>
    </statBases>
    <ingestible>
		 <foodType>Meal</foodType>
         <preferability>MealLavish</preferability>
		 <tasteThought>AteProperMeal_Luxus</tasteThought>
         <ingestEffect>EatVegetarian</ingestEffect>
		 <maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
         <ingestSound>Meal_Eat</ingestSound>
		<outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
         <hediffDef>Trunken_hediff_Cheese</hediffDef>
         <severity>0.25</severity>
        </li>
		</outcomeDoers>
    </ingestible>
    <thingCategories Inherit="False">
      <li>ProperMeals</li>
    </thingCategories>
	<tradeability>Sellable</tradeability>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>4</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
	</comps>
</ThingDef>

