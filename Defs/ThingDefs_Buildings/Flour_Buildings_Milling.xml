<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BenchBase">
		<defName>Millstone</defName>
		<label>millstone</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A small muscle-powered grinding stone for quickly turning wheat into flour.</description>
		<graphicData>
			<texPath>Things/Building/Millstone</texPath>
			<graphicClass>Graphic_Single</graphicClass> <!-- Multi -->
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<rotatable>false</rotatable>
		<costStuffCount>100</costStuffCount>
		<stuffCategories>
			<li>Stony</li>
		</stuffCategories>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Beauty>20</Beauty>
			<WorkToBuild>1000</WorkToBuild>
			<MaxHitPoints>800</MaxHitPoints>
			<Flammability>0.1</Flammability>
			<WorkTableWorkSpeedFactor>1</WorkTableWorkSpeedFactor>
		</statBases>
		<size>(2,2)</size>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<surfaceType>Item</surfaceType>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<designationCategory>Production</designationCategory>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<researchPrerequisites>
			<li>NutrientPaste</li> <!-- Research -->
		</researchPrerequisites>
	</ThingDef>
  
</Defs>